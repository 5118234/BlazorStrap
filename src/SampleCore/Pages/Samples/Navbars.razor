@page "/samples/navbars"

    <Navbar IsExpand="true" IsFixedTop="true" IsDark="true" Color="Color.Dark" class="navbar-expand-md">
        <NavbarBrand href="#">Brand</NavbarBrand>
        <NavbarToggler  />
        <Collapse isOpen="@IsOpen" IsNavbar="true">
            <BlazorNav IsList="true" IsNavbar="true">
                <NavItem>
                    <BlazorNavLink IsActive="true" href="#" Match="NavLinkMatch.All">Home</BlazorNavLink>
                </NavItem>
                <NavItem IsDropdown="true">
                    <DropdownToggle IsDark="true">CategoryOne</DropdownToggle>
                    <DropdownMenu>
                        <DropdownItem href="https://www.microsoft.com" StayOpen="true">Create</DropdownItem>
                        <DropdownItem href="CategoryOne/Delete">Delete</DropdownItem>
                        <DropdownItem href="CategoryOne/Rename">Rename</DropdownItem>
                        <DropdownItem href="CategoryOne/Show">Show</DropdownItem>
                    </DropdownMenu>
                </NavItem>
                <NavItem IsDropdown="true">
                    <DropdownToggle IsDark="true">CategoryTwo</DropdownToggle>
                    <DropdownMenu>
                        <DropdownItem href="CategoryTwo/Create">Create</DropdownItem>
                        <DropdownItem href="CategoryTwo/Delete">Delete</DropdownItem>
                        <DropdownItem href="CategoryTwo/Rename">Rename</DropdownItem>
                        <DropdownItem href="CategoryTwo/Show">Show</DropdownItem>
                    </DropdownMenu>
                </NavItem>
            </BlazorNav>
        </Collapse>
    </Navbar>
        
@code {
    bool IsOpen = true;
}