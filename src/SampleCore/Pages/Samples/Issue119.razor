@page "/samples/issue119"
    <BSForm Model="@myModel" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        
        <BSFormGroup>
            <BSLabel For="Name">Name</BSLabel>
            <BSInput Id="Name" InputType="InputType.Text" @bind-Value="myModel.Name" />
            <BSFormFeedback For="@(() => myModel.Name)" />
        </BSFormGroup>
        <BSFormGroup>
            <BSButton ButtonType="ButtonType.Submit" onclick="@(() => Submit())" class="w-100">Create</BSButton>
        </BSFormGroup>
    </BSForm>

@code
{
    private MyModel myModel { get; set; } = new MyModel();
    Dictionary<string, string> Errors { get; set; } = new Dictionary<string, string>();

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }

    private void Submit()
    {
        if (!this.Errors.ContainsKey("Name"))
        {
            this.Errors.Add("Name", "An error occured!");
        }

        Console.WriteLine("Validation: {0}", this.Errors["Name"]);

        this.StateHasChanged();
    }

   
}