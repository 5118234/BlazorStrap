    <BlazorInput InputType="InputType.Select" Size="Size.Small">
        <option>Small select</option>
    </BlazorInput>
</div>

<h3>Range Inputs</h3>

<div class="docs-example">
    <BlazorForm>
        <FormGroup>
            <BlazorLabel For="formControlRange">Example Range input</BlazorLabel>
            <BlazorInput InputType="InputType.Range" Id="formControlRange" />
        </FormGroup>
    </BlazorForm>
