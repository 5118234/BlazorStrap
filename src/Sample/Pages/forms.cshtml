@addTagHelper *, BlazorStrap
@page "/forms"

<h1>Forms</h1>

<div class="docs-example">
    <BlazorForm>
        <FormGroup>
            <BlazorLabel For="exampleInputEmail1">Email address</BlazorLabel>
            <BlazorInput Id="exampleInputEmail1" InputType="InputType.Email" PlaceHolder="Enter email" />
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </FormGroup>
        <FormGroup>
            <BlazorLabel For="exampleInputPassword1">Password</BlazorLabel>
            <BlazorInput Id="exampleInputPassword1" InputType="InputType.Password" PlaceHolder="Password" />
        </FormGroup>
        <FormGroup IsCheck="true">
            <BlazorInput Id="exampleCheck1" InputType="InputType.Checkbox" />
            <BlazorLabel IsCheck="true" For="exampleCheck1">Check me out</BlazorLabel>
        </FormGroup>
        <BlazorButton Color="Color.Primary" ButtonType="ButtonType.Submit">Submit</BlazorButton>
    </BlazorForm>
</div>

<p>Bind to Value to get the value from BlazorInput</p>

<div class="docs-example">
    <BlazorForm>
        <FormGroup>
            <BlazorLabel For="exampleFormControlSelect1">Example select</BlazorLabel>
            <BlazorInput Id="exampleFormControlSelect1" InputType="InputType.Select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </BlazorInput>
        </FormGroup>
        <FormGroup>
            <BlazorLabel For="exampleText">Text Area</BlazorLabel>
            <BlazorInput InputType="InputType.TextArea" Name="text" Id="exampleText" Rows="5" />
        </FormGroup>
        <FormGroup>
            <BlazorLabel For="exampleFormControlFile1">Example file input</BlazorLabel>
            <BlazorInput InputType="InputType.File" Id="exampleFormControlFile1" />
        </FormGroup>
    </BlazorForm>
</div>


