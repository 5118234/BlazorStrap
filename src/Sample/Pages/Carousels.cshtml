@addTagHelper *, BlazorStrap
@page "/carousels"

<h1>Carousels</h1>

<div class="docs-example">
    <Carousel>
        <CarouselIndicators NumberOfItems="@items.Count" ActiveIndex="@ActiveIndex" />
        <div class="carousel-inner">
            @for (int i = 0; i < items.Count; i++)
            {
                <CarouselItem IsActive="@(ActiveIndex == i)" src="@items[i].Source" alt="@items[i].Alt" />
            }
        </div>
        <CarouselControl CarouselDirection="CarouselDirection.Previous" NumberOfItems="@items.Count" ActiveIndex="@ActiveIndex" onclick="@onclick" />
        <CarouselControl CarouselDirection="CarouselDirection.Next" NumberOfItems="@items.Count" ActiveIndex="@ActiveIndex" onclick="@onclick" />
    </Carousel>
</div>

<div>
    ActiveIndex: @ActiveIndex
</div>

