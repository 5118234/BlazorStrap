@using Microsoft.AspNetCore.Blazor
@using BlazorStrap.util

<nav aria-label="Pagination">
    <ul class="@classname" style="@Style">
        @ChildContent
    </ul>
</nav>

@functions {
    private string classname
    {
        get
        {
            var size = Size != Size.None ? $"pagination-{Size.ToDescriptionString()}" : null;
            var alignment = GetAlignment();
            return $"pagination {size} {alignment} {Class}";
        }
    }
    public Size Size { get; set; } = Size.None;
    public Alignment Alignment { get; set; } = Alignment.Left;
    public string Class { get; set; }
    public string Style { get; set; }
    public RenderFragment ChildContent { get; set; }
    private string GetAlignment()
    {
        if (Alignment == Alignment.Center) return "justify-content-center";
        if (Alignment == Alignment.Right) return "justify-content-end";
        return null;
    }
}
