@using Microsoft.AspNetCore.Blazor
@inherits ColumnBase

<label class="@classname" style="@Style" for="@For">@ChildContent</label>

@functions {
    string classname
    {
        get
        {
            var check = IsCheck ? "form-check-label" : null;
            var size = GetColumnClass(null);
            var column = size != null ? "col-form-label" : null;
            return $"{check} {column} {size} {Class}";
        }
    }
    [Parameter] private string For { get; set; }
    [Parameter] private bool IsCheck { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private string Style { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}