@using Microsoft.AspNetCore.Blazor

<div class="@className">
    @ChildContent
</div>

@functions {
    private string className
    {
        get
        {
            return NoGutters ? "row no-gutters" : "row";
        }
    }

    public bool NoGutters { get; set; }

    public RenderFragment ChildContent { get; set; }
}