@using Microsoft.AspNetCore.Blazor

<thead class="@classname" style="@Style">
    @ChildContent
</thead>

@functions {
    string classname
    {
        get
        {
            var light = TableHeadType == TableHeadType.Light ? "thead-light" : null;
            var dark = TableHeadType == TableHeadType.Dark ? "thead-dark" : null;
            return $"{light} {dark} {Class}";
        }
    }
    public TableHeadType TableHeadType { get; set; } = TableHeadType.None;
    public string Class { get; set; }
    public string Style { get; set; }
    public RenderFragment ChildContent { get; set; }
}
