@namespace BlazorStrap
@inherits CodeBSDropdownToggle

@if (IsOpen == null)
{ 
<DynamicElement Attributes="@UnknownParameters" TagName="@Tag" class="@classname" href="@href" type="@Type" aria-haspopup="true" aria-expanded="@DropdownMenu.Open.ToString()" @onclick="@onClickEvent" @onkeydown="@Escape" @onfocusin="@GotFocus">
    @ChildContent
</DynamicElement>
}
else
{
<DynamicElement Attributes="@UnknownParameters" TagName="@Tag" class="@classname" href="@href" type="@Type" aria-haspopup="true" aria-expanded="@IsOpen.ToString()" @onclick="@onclick" @onkeydown="@Escape" @onfocusin="@GotFocus">
    @ChildContent
</DynamicElement>
}