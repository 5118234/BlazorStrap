@if (Href == null)
{
    <span class="@classname" style="@Style">
        @ChildContent
    </span>
}
@if (Href != null)
{
    <a href="@Href" class="@classname" style="@Style">
        @ChildContent
    </a>
}


@functions {
    private string classname
    {
        get
        {
            var pill = IsPill ? "badge-pill" : "";
            return $"badge {pill} badge-{Color.ToDescriptionString()} {Class}";
        }
    }

    [Parameter]
    private Color Color { get; set; } = Color.Primary;
    [Parameter]
    private bool IsPill { get; set; }
    [Parameter]
    private string Href { get; set; }
    [Parameter]
    private string Class { get; set; }
    [Parameter]
    private string Style { get; set; }
    [Parameter]
    private RenderFragment ChildContent { get; set; }
}
