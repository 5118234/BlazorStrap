@using Microsoft.AspNetCore.Blazor

<ol class="@classname" style="@Style">
    @for(var i = 0; i < NumberOfItems; i++)
    {
        <li class="@ItemIsActive(i)" />
    }
</ol>

@functions {
    private string classname
    {
        get
        {
            return $"carousel-indicators {Class}";
        }
    }
    [Parameter] private int NumberOfItems { get; set; }
    [Parameter] private int ActiveIndex { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private string Style { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }

    string ItemIsActive(int i)
    {
        return i == ActiveIndex ? "active" : null;
    }
}